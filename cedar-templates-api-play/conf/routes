# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET            /                              controllers.Application.index()
# Templates
POST           /templates                     controllers.CrudController.createTemplate()
GET            /templates/:id                 controllers.CrudController.findTemplate(id: String, expanded: Boolean ?= false, validation: Boolean ?= false)
GET            /templates                     controllers.CrudController.findAllTemplates()
PUT            /templates/:id                 controllers.CrudController.updateTemplate(id: String)
DELETE         /templates/:id                 controllers.CrudController.deleteTemplate(id: String)
# Template Elements
POST           /template_elements             controllers.CrudController.createTemplateElement()
GET            /template_elements/:id         controllers.CrudController.findTemplateElement(id: String, expanded: Boolean ?= false, validation: Boolean ?= false)
GET            /template_elements             controllers.CrudController.findAllTemplateElements()
PUT            /template_elements/:id         controllers.CrudController.updateTemplateElement(id: String)
DELETE         /template_elements/:id         controllers.CrudController.deleteTemplateElement(id: String)
# Template Instances
POST           /template_instances            controllers.CrudController.createTemplateInstance()
GET            /template_instances/:id        controllers.CrudController.findTemplateInstance(id: String)
GET            /template_instances            controllers.CrudController.findAllTemplateInstances()
PUT            /template_instances/:id        controllers.CrudController.updateTemplateInstance(id: String)
DELETE         /template_instances/:id        controllers.CrudController.deleteTemplateInstance(id: String)

# For CORS - preflight request
OPTIONS        /*all                          controllers.Application.preflight(all)

## Map static resources from the /public folder to the /assets URL path
#GET         /assets/*file            controllers.Assets.at(path="/public", file)